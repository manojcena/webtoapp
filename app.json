{
    "$jason": {
        "head": {
            "title": "Jasopedia",
            "styles": {
                "bold": {
                    "font": "HelveticaNeue-CondensedBold",
                    "size": "15"
                },
                "padded": {
                    "padding": "10"
                },
                "normal": {
                    "font": "HelveticaNeue",
                    "size": "12"
                }
            },
            "actions": {
                "$foreground": {
                    "type": "$reload"
                }
            }
        },

        "body": {
            "background": {
                "type": "html",
                "text": "<!DOCTYPE html><html><script src='https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js'></script><body><div ng-app='myApp' ng-controller='myCtrl'>First Name:<input type='text' ng-model='firstName'><br>Last Name:<input type='text' ng-model='lastName'><br><br>Full Name:{{firstName+' '+lastName}}</div><script>var app=angular.module('myApp',[]);app.controller('myCtrl',function($scope){$scope.firstName='John';$scope.lastName='Doe'});</script></body></html>",
                "action": {
                    "type": "$default"
                }
            }
        }
    }
}