{
    "$jason": {
        "head": {
            "title": "Jasopedia",
            "styles": {
                "bold": {
                    "font": "HelveticaNeue-CondensedBold",
                    "size": "15"
                },
                "padded": {
                    "padding": "10"
                },
                "normal": {
                    "font": "HelveticaNeue",
                    "size": "12"
                }
            },
            "actions": {
                "$foreground": {
                    "type": "$reload"
                }
            }
        },

        "body": {
            "background": {
                "type": "html",
                "url": "https://github.com/jasonette",
                "action": {
                    "type": "$default"
                }
            }
        }
    }
}